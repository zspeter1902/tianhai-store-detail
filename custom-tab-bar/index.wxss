.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 60rpx;
  height: 104rpx;
  background: white;
  display: flex;
  filter: drop-shadow(0rpx -4rpx 10rpx rgba(0, 0, 0, 0.06));
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}
.tab-bar.on::before {
  content: '';
  position: absolute;
  right: 0;
  left: 0;
  top: 0;
  width: 229rpx;
  height: 32rpx;
  margin: 0 auto;
  background-size: contain;
  transform: translateY(-32rpx);
  transition: 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55) transform;
  will-change: transform;
  background: url('data:image/png;base64,') no-repeat center top / contain;
}

.tab-bar-item {
  position: relative;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .item-image {
  width: 44rpx;
  height: 44rpx;
}
.tab-bar-item .special-image {
  position: absolute;
  top: -14rpx;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
  background: linear-gradient(315deg, #4037CF 0%, #6B62FF 100%);
  box-shadow: 0px 2px 22px 0px rgba(64, 55, 207, 0.29);
}
.tab-bar-item .special-image::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 8rpx;
  background: linear-gradient(44deg, #FFFFFF 0%, rgba(255, 255, 255, 0.8) 100%);
  border-radius: 5rpx;
  transform: translate(-50%, -50%);
}
.tab-bar-item .special-image::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 8rpx;
  background: linear-gradient(44deg, #FFFFFF 0%, rgba(255, 255, 255, 0.8) 100%);
  border-radius: 5rpx;
  transform: translate(-50%, -50%) rotate(-90deg);
}

.tab-bar-item .tab-text {
  margin-top: 3rpx;
}

.tab-bar-item .special-text {
  margin-top: 44rpx
}

.tab-bar-item .tab-text {
  font-size: 22rpx;
}