}
/* dialog */
.pay-dialog {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  padding: 0;
}
.pay-dialog .weui-half-screen-dialog__hd {
  margin-top: 10rpx;
  height: 124rpx;
}
.pay-dialog .weui-half-screen-dialog__title {
  padding: 0 30rpx;
  color: #666;
  font-size: 36rpx;
  font-family: '黑体';
}
.pay-dialog .weui-half-screen-dialog__bd {
  padding: 0 30rpx 60rpx;
  font-size: 30rpx;
  color: #333;
}
.pay-dialog .weui-half-screen-dialog__ft {
  padding: 10rpx 0 164rpx;
}
.pay-dialog .weui-tabs-bar__item {
  margin-right: 58rpx;
  line-height: 42rpx;
}
.pay-dialog .weui-tabs-bar__title {
  border-bottom-width: 4rpx;
}
.pay-dialog .tab-content {
  margin: 0 -12rpx;
}
.pay-dialog .item {
  flex: 0 1 238rpx;
  width: 238rpx;
  padding: 0 12rpx;
  margin-top: 30rpx;
}
.pay-dialog .item .box {
  height: 220rpx;
  padding-top: 34rpx;
  border: 2rpx solid #BFBFBF;
  border-radius: 8rpx;
}
.pay-dialog .item .checked,
.pay-dialog .item .box-hover {
  background-color: #f8f8ff;
  border-color: #4037CF;
}
.pay-dialog .box .name {
  line-height: 42rpx;
}
.pay-dialog .box .price {
  margin-top: 48rpx;
}
.pay-dialog .box .rmb {
  color: #4037CF;
  line-height: 42rpx;
  font-family: Helvetica;
}
.pay-dialog .box .cost {
  color: #4037CF;
  font-size: 48rpx;
  line-height: 68rpx;
  font-weight: bold;
  font-family: arial;
}
.pay-dialog .weui-btn {
  width: 100%;
  padding: 25rpx 24rpx;
  font-weight: 400;
  font-size: 36rpx;
  line-height: 48rpx;
  border-radius: 0;
  background-color: #4037CF;
}
.pay-dialog .weui-btn.button-hover {
  background-color: #4037CF;
  opacity: 0.8;
}

