.container {
  padding: 0 33rpx 30rpx;
}
.userinfo {
  position: relative;
  margin-top: 84rpx;
}
.userinfo .box {
  min-height: 370rpx;
  padding: 40rpx 20rpx 26rpx 30rpx;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-color: #6D64FB;
  border-radius: 8rpx;
  z-index: 2;
}
.userinfo .avatar{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 36rpx;
  border-radius: 60rpx;
  vertical-align: top;
  overflow: hidden;
}
.userinfo .name{
  color: #ffffff;
  font-size: 30rpx;
  line-height: 42rpx;
}
.userinfo .time {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.67);
  line-height: 32rpx;
}
.userinfo .record-tip {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  color: rgba(255,255,255,0.67);
  line-height: 28rpx;
}
.userinfo .progress {
  width: 392rpx;
}
.userinfo .renew-btn {
  display: inline-block;
  padding: 0;
  margin-top: 55rpx;
  width: 180rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  font-family: '黑体';
  border-radius: 30rpx;
  color: #4037CF;
  vertical-align: top;
}
.userinfo .login-btn::after{
  display: none;
}
.login-btn{
  width: calc(100% - 60rpx) !important;
  padding: 0;
  margin: 0 !important;
  font-size: 32rpx;
  line-height: 80rpx;
  font-family: '黑体';
  font-weight: normal;
  color: #ffffff;
  text-align: left;
  border-radius: 8rpx;
  background-color: transparent
}
.login-btn::after{
  display: none;
}
/* platform */
.bind {
  margin-top: 50rpx;
  padding: 30rpx 50rpx 70rpx;
  border-radius: 8rpx;
}
.title {
  font-size: 28rpx;
