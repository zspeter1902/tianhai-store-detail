/* 弹窗 */
.dialog-container {
  position: relative;
  z-index: 2;
}
.dialog-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog-header {
  position: relative;
  margin-bottom: 30rpx;
}
.dialog-form {
  text-align: left;
  overflow: hidden;
}
.icon-close {
  position: absolute;
  top: -20rpx;
  right: 0;
  opacity: .5;
}
.dialog-title {
  display: inline-block;
  margin: 0rpx 4rpx 20rpx;
  color: #fff;
  font-size: 50rpx;
  line-height: 70rpx;
  font-weight: 600;
  text-shadow: 0 3rpx 3rpx #4037CF;
  font-family: '黑体';
}
