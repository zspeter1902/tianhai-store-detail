/* 登录框 */
.profit-bg {
  min-height: 480rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  padding-bottom: 40rpx;
  background: linear-gradient(146deg, #0A3FFF 0%, #649BFF 100%);
  z-index: 2;
}
/* 全局 */
.container {
  position: relative;
  padding: 10rpx 36rpx 0;
  z-index: 3;
}
/* 统计 */
.total-gutter {
  padding-bottom: 40rpx;
  border-bottom: 20rpx solid #f4f6f8;
}
.my-total {
  margin: -108rpx 36rpx 0;
}
/* 店铺设置 */
.my-title {
  padding: 0 36rpx;
}
.function-list {
  margin-top: -20rpx;
  margin-bottom: 50rpx;
}
.function-list .item {
  padding: 20rpx 12rpx 4rpx;
  border-bottom: 4rpx solid #F4F6F8;
}
.function-list .caret {
  position: relative;
}
.function-list .caret::after {
  content: '';
  position: absolute;
  right: 18rpx;
  top: 50%;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid #6B77FE;
  border-right: 12rpx solid transparent;
  vertical-align: middle;
}
.function-list .icon {
  width: 98rpx;
  height: 104rpx;
  margin-right: 27rpx;
}
.function-list .name {
  font-size: 36rpx;
  color: #222222;
  line-height: 54rpx;
}
.btn-authorization {
  width: 610rpx !important;
  padding: 0 20rpx;
  margin-top: 112rpx;
  color: #fff;
  font-weight: normal;
  font-size: 34rpx;
  border-radius: 0;
  line-height: 80rpx;
  background: linear-gradient(146deg, #606FFF 0%, #7D85FC 100%);
  box-shadow: 0rpx 4rpx 24rpx 0rpx rgba(87, 103, 255, 0.4);
  text-shadow: 0rpx 4rpx 24rpx rgba(87, 103, 255, 0.4);
}
/* platform */
.bind {
  margin-top: 50rpx;
  padding: 30rpx 50rpx 70rpx;
  border-radius: 8rpx;
}
.title {
  font-size: 28rpx;
  color: #3B3085;
  line-height: 40rpx;
  font-family: '黑体';
  font-weight: bold;
}
.my-platform {
  margin-top: 40rpx;
  padding: 0 32rpx;
}
.my-platform.platform .item {
  border-radius: 8rpx;
}

.my-platform.platform .logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 0;
}

.button-hover {
  opacity: 0.8;
}
/* dialog */
.pay-dialog {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  padding: 0;
}
.pay-dialog .weui-half-screen-dialog__hd {
  margin-top: 10rpx;
  height: 124rpx;
}
.pay-dialog .weui-half-screen-dialog__title {
  padding: 0 30rpx;
  color: #666;
  font-size: 36rpx;
  font-family: '黑体';
}
.pay-dialog .weui-half-screen-dialog__bd {
  padding: 0 30rpx 60rpx;
  font-size: 30rpx;
  color: #333;
}
.pay-dialog .weui-half-screen-dialog__ft {
  padding: 10rpx 0 164rpx;
}
.pay-dialog .weui-tabs-bar__item {
  margin-right: 58rpx;
  line-height: 42rpx;
}
.pay-dialog .weui-tabs-bar__title {
  border-bottom-width: 4rpx;
}
.pay-dialog .tab-content {
  margin: 0 -12rpx;
}
.pay-dialog .item {
  flex: 0 1 238rpx;
  width: 238rpx;
  padding: 0 12rpx;
  margin-top: 30rpx;
}
.pay-dialog .item .box {
  height: 220rpx;
  padding-top: 34rpx;
  border: 2rpx solid #BFBFBF;
  border-radius: 8rpx;
}
.pay-dialog .item .checked,
.pay-dialog .item .box-hover {
  background-color: #f8f8ff;
  border-color: #4037CF;
}
.pay-dialog .box .name {
  line-height: 42rpx;
}
.pay-dialog .box .price {
  margin-top: 48rpx;
}
.pay-dialog .box .rmb {
  color: #4037CF;
  line-height: 42rpx;
  font-family: Helvetica;
}
.pay-dialog .box .cost {
  color: #4037CF;
  font-size: 48rpx;
  line-height: 68rpx;
  font-weight: bold;
  font-family: arial;
}
.pay-dialog .weui-btn {
  width: 100%;
  padding: 25rpx 24rpx;
  font-weight: 400;
  font-size: 36rpx;
  line-height: 48rpx;
  border-radius: 0;
  background-color: #4037CF;
}
.pay-dialog .weui-btn.button-hover {
  background-color: #4037CF;
  opacity: 0.8;
}

.bind-more {
  margin-top: 30rpx;
}
.store-lists {
  padding: 20rpx 0;
}
.store-list {
  margin-bottom: 30rpx;
  padding: 20rpx 40rpx 10rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}
.store-list .item {
  margin-bottom: 30rpx;
}
.store-list .logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.store-name {
  margin-top: 4rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.store-status {
  margin-top: 16rpx;
  color: #E63232;
}
.store-status.on {
  color: #5BF452;
}
.store-btns {
  width: 124rpx;
}
.store-btn {
  display: inline-block;
  width: auto !important;
  padding: 0 10rpx;
  margin: 0 !important;
  border: none;
  font-size: 26rpx;
  line-height: 48rpx;
  font-weight: normal;
  background-color: transparent;
  vertical-align: top;
}
.store-btn + .store-btn {
  margin-top: 16rpx !important;
}
/*  */
.submit-hover {
  opacity: 0.8;
}
/* 弹窗 */
.dialog-container {
  position: relative;
  z-index: 2;
}
.dialog-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog-header {
  position: relative;
  margin-bottom: 30rpx;
}
.dialog-form {
  text-align: left;
  overflow: hidden;
}
.icon-close {
  position: absolute;
  top: -20rpx;
  right: 0;
  opacity: .5;
}
.dialog-title {
  display: inline-block;
  margin: 0rpx 4rpx 20rpx;
  color: #fff;
  font-size: 50rpx;
  line-height: 70rpx;
  font-weight: 600;
  text-shadow: 0 3rpx 3rpx #4037CF;
  font-family: '黑体';
}
/* 更改弹窗默认样式 */
.my-cell-btn {
  margin-top: 40rpx;
}

.btn-code {
  font-size: 26rpx;
  line-height: 38rpx;
}
.dialog-submit {
  width: 100% !important;
  padding: 0 20rpx;
  color: #3B3085;
  font-weight: bold;
  font-size: 26rpx;
  font-family: '黑体';
  border-radius: 0;
  line-height: 80rpx;
  background-color: #fff;
}