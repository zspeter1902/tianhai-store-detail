.weui-tabs{
  width:100%
}
.weui-tabs-bar__wrp{
  width:100%;
  background:#fff
}
.weui-tabs-bar__content{
  display: flex;
  width:100%;
  padding: 30rpx 20rpx;
  white-space:nowrap;
  justify-content: space-between;
}
.weui-tabs-bar__item{
  position: relative;
  display:inline-block;
  /* width: 140rpx; */
  border-radius: 8rpx;
  background-color: #e7e7e7;
  color: #3B3085;
}
.weui-tabs-bar__title{
  display:inline-block;
  width: 100%;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  line-height: 38rpx;
}
.selected {
  filter: drop-shadow(1rpx 4rpx 8rpx rgba(64, 55, 207, 0.76));
}
.weui-tabs-bar__item::before,
.weui-tabs-bar__item::after  {
  height: 100%;
  box-sizing: border-box;
}
.weui-tabs-bar__item:nth-child(1)::after {
  content: '';
  position: absolute;
  left: 100%;
  top: 0;
  margin-left: -4rpx;
  border-left: 24rpx solid #e7e7e7;
  border-top: 39rpx solid transparent;
  border-right: 24rpx solid transparent;
  border-bottom: 39rpx solid #e7e7e7;
  border-top-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.weui-tabs-bar__item:nth-child(2)::before {
  content: '';
  position: absolute;
  right: 100%;
  top: 0;
  margin-right: -4rpx;
  border-left: 24rpx solid transparent;
  border-top: 39rpx solid #e7e7e7;
  border-right: 24rpx solid #e7e7e7;
  border-bottom: 39rpx solid transparent;
  border-top-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
