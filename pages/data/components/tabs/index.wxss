  /* border-top-right-radius: 0; */
}
.weui-tabs-bar__item:nth-child(2) {
  border-radius: 0;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  text-align: center;
}
.weui-tabs-bar__item:nth-child(3) {
  border-top-left-radius: 0;
  text-align: right;
}
