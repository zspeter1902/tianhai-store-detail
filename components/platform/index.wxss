/* components/platform/index.wxss */
.platform .item {
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
}
.platform .logo {
  width: 185rpx;
  height: 185rpx;
}
.platform .checked::before {
  content: '';
  position: absolute;
  top: -45rpx;
  right: -44rpx;
  width: 88rpx;
  height: 88rpx;
  background-color: #4037CF;
  border-radius: 46rpx;
}
.platform .checked::after {
  content: '';
  position: absolute;
  top: 10rpx;
  right: 8rpx;
  width: 18rpx;
  height: 8rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
}
.button-hover {
  opacity: 0.8;
}
/* 弹窗 */
.dialog-container {
  position: relative;
  z-index: 2;
}
.dialog-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog-header {
  position: relative;
  margin-bottom: 30rpx;
}
.dialog-form {
  text-align: left;
  overflow: hidden;
}
.icon-close {
  position: absolute;
  top: -20rpx;
  right: 0;
  opacity: .5;
}
.dialog-title {
  display: inline-block;
  margin: 0rpx 4rpx 20rpx;
  color: #fff;
  font-size: 50rpx;
  line-height: 70rpx;
  font-weight: 600;
  text-shadow: 0 3rpx 3rpx #4037CF;
  font-family: '黑体';
}
/* 更改弹窗默认样式 */
.my-cell-btn {
  margin-top: 40rpx;
}
.btn-code {
  font-size: 26rpx;
  line-height: 38rpx;
}
.dialog-submit {
  width: 100% !important;
  padding: 0 20rpx;
  color: #3B3085;
  font-weight: bold;
  font-size: 26rpx;
  font-family: '黑体';
  border-radius: 0;
  line-height: 80rpx;
  background-color: #fff;
}